{{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto. --}}

{{!-- Create a button in `index.handlebars` that will submit the user input into the database. --}}

<div class="container">

  <div class="row">
    <div class="col-md-6 offset-md-3">.col-md-6 .offset-md-3</div>
  </div>

  <div class="row">
    <div class="col">
      <h2>Burgers avalible to Devour!</h2>

      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.id}}
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button class="btn-primary" type="submit">Devour it!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>

    </div>
    <div class="col">
      <h2>Burgers that have been devoured!</h2>

      <ul>

        {{#each burgers}}
          {{#if this.devoured}}

            <li>

              {{this.id}}
              {{this.burger_name}}

            </li>
          {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>

  <div class="row">
    <div class="col-md-6 offset-md-3">.
      
      <h2>Add a burger!</h2>

      <form class="create-update-form" action="/" method="POST">
      
        <div class="form-group">
          <p>Enter a burger you would like to order!</p>
          <input type="text" id="ca" name="burger_name">
        </div>

        <button class="btn-primary" type="submit">Submit Order!</button>

      </form>
    </div>
  </div>

</div>

